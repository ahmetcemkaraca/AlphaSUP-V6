# AlphaSUP Cloud Functions - Environment Variables
# Bu dosyayı .env olarak kopyalayın ve firebase functions:config:set ile ayarlayın

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Configuration (Email)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@alphasup.com

# App Configuration
APP_ENVIRONMENT=production
APP_VERSION=3.0.0
APP_DEBUG=false

# External API Keys
WEATHER_API_KEY=your_weather_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Firebase Admin SDK (set via Firebase Console)
# GOOGLE_APPLICATION_CREDENTIALS automatically set by Firebase
